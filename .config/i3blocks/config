[mpd]
command=music_i3blocks
interval=1
color=#00CC00

[cpu_usage]
command=getcpuusage --i3blocks
interval=1

[cpu_temp]
command=getcputemp --i3blocks
interval=1

[gpu_temp]
command=getgputemp --i3blocks
interval=1

[mem_usage]
command=getusedmem --i3blocks
interval=1

[diskhome]
command=getfreespace /home --i3blocks
interval=30

[disk]
command=getfreespace / --i3blocks
interval=30

[time]
command=date '+%Y-%m-%d (%a) %H:%M'
color=#00CC00
interval=1
