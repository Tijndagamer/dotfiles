# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	position top
    tray_output DVI-I-1
    status_command i3blocks
}

#--- Autostart scripts ---#

# Set the walpaper
exec setdefaultwallpaper
# Disable screen turning off
#exec xset -dpms
# Lower the mouse sensitivity (for Logitech G300)
exec set_mouse_sen_low
# Redshift, otherwise my eyes die
exec nohup redshift &
# Set the monitors in the good position
exec monitor_fix
# I don't use compton anymore
#exec --no-startup-id compton
# Mouse dissapears after a while
exec unclutter
# Set screenlocker after x amount of time
##### Doesn't work for some reason
#exec xautolock -time 1 -locker 'i3lock --show-failed-attempts --color 191919' &

# Enable numlock
exec xdotool key 0xff7f

exec mpd
exec workrave
exec nextcloud

exec i3-msg 'workspace 1; exec firefox'
exec i3-msg 'workspace 2; exec claws-mail'
exec i3-msg 'workspace 3; exec telegram'

#--- Keybinds ---#

# Taking screenshots

# Make a high quality screenshot when the print screen button is pressed.
bindsym Print exec scrot --quality 100 --multidisp --exec 'mv $f ~/Documenten/Pictures/Screenshots/$f' && notify-send "Screenshot taken" "(All monitors)" -t 1000

# Make a high quality screenshot of only the focused window.
bindsym Shift+Print exec scrot --focused --quality 100 --exec 'mv $f ~/Documenten/Pictures/Screenshots/$f' && notify-send "Screenshot taken" "(Focused window)" -t 1000

# For some reason, moving the screenshot doesn't work.
bindsym $mod+Shift+Print exec scrot --select --exec 'mv $f ~/Documenten/Pictures/Screenshot/$f' && notify-send "Screenshot taken" "(Selected area)" -t 1000

# I should probably set this to a calculator program, but for now this'll do.
bindsym XF86Calculator exec setrandomwallpaper

# Get the FN layer volume keys to work
bindsym XF86AudioRaiseVolume exec amixer set Master 5+
bindsym XF86AudioLowerVolume exec amixer set Master 5-

# Change keyboard layout
bindsym $mod+$win+o exec setxkbmap 'us(intl)'
bindsym $mod+$win+p exec setxkbmap 'us(euro)'
bindsym $mod+$win+d exec setxkbmap 'dvorak'

# Sceenlock
bindsym $win+Shift+s exec i3lock --color 191919 --show-failed-attempts

